<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesDB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/night_dark</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="chevron_color">
        <item name="android:tint">@color/night_dark</item>
    </style>

    <style name="layout_background">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="image_views">
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_no_image</item>
    </style>

    <style name="cards">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">#F4F4F4</item>
    </style>

    <style name="rating_tint">
        <item name="tint">@color/night_dark</item>
    </style>

    <style name="input_layout_box" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="endIconDrawable">@drawable/ic_search</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/night_dark</item>
    </style>

    <!-- Тексты. -->
    <style name="Main_Titles" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/night_dark</item>
    </style>

    <style name="Main_Titles_chevron" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/night_dark</item>
        <item name="drawableRightCompat">@drawable/ic_chevron_right</item>
        <item name="drawableTint">@color/night_dark</item>
    </style>

    <style name="SmallTitles" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/night_dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Additions" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/night_dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Overview" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/night_dark</item>
    </style>

    <style name="BigTitles" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/night_dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>
</resources>